# default: on
#
# description: The Amanda backup client should be enabled for systems
#              which will be backed up by an Amanda backup server.

service amanda
{
	disable		= no
	flags           = IPv4
	socket_type	= stream
	protocol	= tcp
	wait		= no
	user		= backup
	group		= disk
	groups		= yes
	server		= @amlibexecdir@/amandad
	server_args     = -auth=bsdtcp amdump senddiscover
}
