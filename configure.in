changequote([,])
  test -z "$snapdate" || VERSION="$VERSION-$snapdate"
  SNAPSHOT_STAMP=SNAPSHOT
else
  SNAPSHOT_STAMP=
fi
AC_SUBST(SNAPSHOT_STAMP)

