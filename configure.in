  AM_CFLAGS="$AM_CFLAGS -Wall"
  $CC -v --help 2>&1 | $GREP -- '-Wextra ' 2>&1 > /dev/null
  if test $? -eq 0; then
    AM_CFLAGS="$AM_CFLAGS -Wextra"
  else
   AM_CFLAGS="$AM_CFLAGS -W"
  fi

