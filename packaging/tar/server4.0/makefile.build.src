#!/usr/bin/make -f
SHELL := $(shell [ -x /bin/bash ] && echo /bin/bash || command -v bash)
THIS_MAKEFILE := $(realpath $(lastword $(MAKEFILE_LIST)))
#
#
SRCDIR := $(realpath $(PWD))
# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

# list of debian-helper bins ignored:
