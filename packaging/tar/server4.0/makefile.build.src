# dh_perl -v $(buildroot)$(AMPERLDIR) $(buildroot)$(AMLIBEXECDIR) $(buildroot)$(BINDIR) $(buildroot)$(SBINDIR)
# dh_makeshlibs -v
# dh_shlibdeps -v -l"$(buildroot)$(AMLIBDIR)"
# dh_installdeb
